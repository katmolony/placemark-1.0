<div class="box box-link-hover-shadow">
  <h1 class="title">Our Top Locations</h1>
  {{#each allLocations}}
  <div class="box box-link-hover-shadow">
    <h2 class="title">
      {{title}}
    </h2>
    <h2>
      {{temp}}
    </h2>
    <a href="/location/{{_id}}" class="button">
      <span class="icon is-small">
        <i class="fas fa-folder-open"></i>
      </span>
    </a>
  </div>
  {{/each}}
</div>