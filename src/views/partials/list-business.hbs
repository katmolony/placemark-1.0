{{#each location.businesss}}
<div class="box box-link-hover-shadow">
  <h3 class="title">
    {{title}}
  </h3>
  <h2>
    {{category}}
  </h2>
  <h2>
    {{description}}
  </h2>
  <h2>
    {{address}}
  </h2>
  <h2>
    {{lat}}
  </h2>
  <h2>
    {{lng}}
  </h2>
  <a href="/location/{{../location._id}}/business/{{_id}}" class="button">
    <span class="icon is-small">
      <i class="fas fa-folder-open"></i>
    </span>
  </a>
    <a href="/location/{{../location._id}}/deletebusiness/{{_id}}" class="button">
    <span class="icon is-small">
      <i class="fas fa-edit"></i>
    </span>
  </a>
  <a href="/location/{{../location._id}}/deletebusiness/{{_id}}" class="button">
    <span class="icon is-small">
      <i class="fas fa-trash"></i>
    </span>
  </a>
</div>

{{/each}}
